{
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "build",
    "module": "CommonJS",
    "target": "ES6",
    "esModuleInterop": true,
    "allowJs": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@main/*": ["./src/main/*"],
      "@infra/*": ["./src/infra/*"],
      "@domain/*": ["./src/domain/*"],
      "@data/*": ["./src/data/*"],
      "@presentation/*": ["./src/presentation/*"],
      "@test/*": ["./test/*"]
    }
  }
}
