{
  "compilerOptions": {
    "outDir": "build",
    "module": "CommonJS",
    "target": "ES6",
    "esModuleInterop": true,
    "allowJs": true,
    "paths": {
      "@domain/*": ["./src/domain/*"],
      "@data/*": ["./src/data/*"],
      "@presentation/*": ["./src/presentation/*"],
      "@test/*": ["./test/*"]
    }
  }
}
